import java.security.NoSuchAlgorithmException;
import java.security.spec.InvalidKeySpecException;
import java.util.Scanner;

import user.UserLogin;
import user.UserRegister;

public class Index {
    public static void main(String[] args) throws NoSuchAlgorithmException, InvalidKeySpecException {
        System.out.println("Welcome to JavaTalk!");
        Scanner sc = new Scanner(System.in);
        int menu;
        do {
            System.out.println("choose menu");
            System.out.println("1.login | 2. register | 3. exit");
            menu = Integer.parseInt(sc.nextLine());
            switch(menu) {
                case 1: 
                    System.out.println("Login selected");
                    UserLogin ul = new UserLogin();
                    if (ul.login(sc)) {
                       loggedIn(sc);
                    } else {
                        System.out.println("Login failed or canceled. Returning to main menu.");
                    }
                    break;
                case 2:
                	System.out.println("Register selected");
                	UserRegister ur = new UserRegister();
                	ur.register(sc);
                    break;
                case 3: 
                    System.out.println("exit");
                    System.exit(menu);
                    break;
                default :
                    System.out.println("wrong click"); 
                    break;
            }
        } while(menu != 3);
    }
    public static void loggedIn(Scanner sc) {
    	int menu;
    	 do {
             System.out.println("choose loggedIn menu");
             System.out.println("1. board | 2. friends | 3. logout");
             menu = Integer.parseInt(sc.nextLine());
             switch(menu) {
                 case 1:
                     System.out.println("board menu selected");
                     //board function
                     break;
                 case 2:
                	 System.out.println("friends menu selected");
                 case 3:
                     System.out.println("Logout...");
                     break;
                 default:
                     System.out.println("wrong click"); 
                     break;
             }
         } while(menu != 3);
    }
}
